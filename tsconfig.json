{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "jsx": "react",
    "module": "es6",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "strict": true,
    "sourceMap": true,
    "target": "es5",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "./lib",
    "lib": [
      "dom",
      "es2018"
    ],
  },
  "references": [
    {
      "path": "./client"
    },
    {
      "path": "./server"
    },
    {
      "path": "./test"
    }
  ]
}
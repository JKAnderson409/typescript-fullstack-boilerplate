{
  "name": "typescript-fullstack-boilerplate",
  "version": "1.0.0",
  "description": "A boilerplate for typescript with project references with functioning React, Webpack and Express.",
  "author": "Jeff Anderson",
  "license": "MIT",
  "scripts": {
    "install": "(cd client/ && npm install)",
    "build": "tsc -b",
    "dev:client": "(cd client/ && webpack-dev-server)",
    "dev:server": "(cd server/ && tsc -w & nodemon lib/server/src/index.js)",
    "prod:client":"(cd client/ && webpack --mode production)",
    "test": "(cd test/ && tsc -w & nodemon lib/test/index.js)"
  }
}